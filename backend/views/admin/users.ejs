<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users - VerdictPath Admin</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-layout">
    <%- include('partials/sidebar', { currentPage: userType || 'users' }) %>
    
    <main class="admin-main">
      <div class="admin-header">
        <div>
          <h1 class="admin-title">
            <% if (userType === 'individual') { %>üë§ Individual Users
            <% } else if (userType === 'lawfirm') { %>‚öñÔ∏è Law Firms
            <% } else if (userType === 'medicalprovider') { %>üè• Medical Providers
            <% } else { %>üë• All Users<% } %>
          </h1>
          <p class="admin-title-sub">
            Showing <%= pagination.total %> <%= userType === 'all' ? 'users' : userType + 's' %>
          </p>
        </div>
        <div class="header-actions">
          <form action="/portal/admin/users" method="GET" style="display: flex; gap: 10px;">
            <input type="hidden" name="type" value="<%= userType %>">
            <input type="text" name="search" value="<%= searchQuery %>" class="search-input" placeholder="Search by name or email..." style="width: 250px;">
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
        </div>
      </div>
      
      <div class="tabs">
        <a href="/portal/admin/users?type=all" class="tab-btn <%= userType === 'all' ? 'active' : '' %>">All</a>
        <a href="/portal/admin/users?type=individual" class="tab-btn <%= userType === 'individual' ? 'active' : '' %>">Individuals</a>
        <a href="/portal/admin/users?type=lawfirm" class="tab-btn <%= userType === 'lawfirm' ? 'active' : '' %>">Law Firms</a>
        <a href="/portal/admin/users?type=medicalprovider" class="tab-btn <%= userType === 'medicalprovider' ? 'active' : '' %>">Medical Providers</a>
      </div>
      
      <div class="card">
        <% if (users.length === 0) { %>
          <div class="empty-state">
            <div class="empty-state-icon">üîç</div>
            <p class="empty-state-text">No users found</p>
            <p class="empty-state-sub">Try adjusting your search criteria</p>
          </div>
        <% } else { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>User</th>
                  <th>Type</th>
                  <% if (userType === 'lawfirm' || userType === 'all') { %><th>Firm/Provider</th><% } %>
                  <th>Status</th>
                  <th>Registered</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td>
                      <div class="user-info-cell">
                        <div class="user-avatar"><%= user.firstName ? user.firstName.charAt(0).toUpperCase() : user.firmName ? user.firmName.charAt(0).toUpperCase() : '?' %></div>
                        <div class="user-info-text">
                          <span class="user-name">
                            <% if (user.userType === 'lawfirm' && user.firmName) { %>
                              <%= user.firmName %>
                            <% } else if (user.userType === 'medicalprovider' && user.providerName) { %>
                              <%= user.providerName %>
                            <% } else { %>
                              <%= user.firstName %> <%= user.lastName %>
                            <% } %>
                          </span>
                          <span class="user-email"><%= user.email %></span>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge badge-<%= user.userType %>"><%= user.userType %></span>
                    </td>
                    <% if (userType === 'lawfirm' || userType === 'all') { %>
                      <td>
                        <% if (user.firmCode) { %><%= user.firmCode %><% } else if (user.providerCode) { %><%= user.providerCode %><% } else { %>-<% } %>
                      </td>
                    <% } %>
                    <td>
                      <span class="badge badge-<%= user.isActive !== false ? 'active' : 'inactive' %>">
                        <%= user.isActive !== false ? 'Active' : 'Inactive' %>
                      </span>
                    </td>
                    <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                    <td>
                      <a href="/portal/admin/user/<%= user.userType %>/<%= user.id %>" class="btn btn-secondary btn-sm">View</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          
          <% if (pagination.totalPages > 1) { %>
            <div class="pagination">
              <% if (pagination.page > 1) { %>
                <a href="?type=<%= userType %>&page=<%= pagination.page - 1 %>&search=<%= searchQuery %>" class="page-btn">Previous</a>
              <% } %>
              
              <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <a href="?type=<%= userType %>&page=<%= i %>&search=<%= searchQuery %>" class="page-btn <%= pagination.page === i ? 'active' : '' %>"><%= i %></a>
              <% } %>
              
              <% if (pagination.page < pagination.totalPages) { %>
                <a href="?type=<%= userType %>&page=<%= pagination.page + 1 %>&search=<%= searchQuery %>" class="page-btn">Next</a>
              <% } %>
            </div>
          <% } %>
        <% } %>
      </div>
    </main>
  </div>
  
  <script src="/js/admin.js"></script>
</body>
</html>
