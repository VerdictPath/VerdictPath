<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - <%= firmName %></title>
  <link rel="stylesheet" href="/css/portal.css">
</head>
<body>
  <div class="container">
    <div class="portal-header">
      <h1><%= firmName %></h1>
      <p class="subtitle">Firm Code: <%= firmCode %> | Law Firm Client Portal</p>
    </div>
    
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value"><%= totalClients %></div>
        <div class="stat-label">Total Clients</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= activeClients || 0 %></div>
        <div class="stat-label">Active Cases</div>
      </div>
    </div>
    
    <div class="section">
      <h2 class="section-title">Registered Clients</h2>
      
      <% if (clients.length === 0) { %>
        <div class="empty-state">
          <p>No clients registered yet.</p>
          <p style="font-size: 14px;">Clients can register using your firm code: <strong><%= firmCode %></strong></p>
        </div>
      <% } else { %>
        <div class="client-grid">
          <% clients.forEach(client => { %>
            <div class="client-card" onclick="window.location.href='/portal/client/<%= client.id %>'">
              <div class="client-name"><%= client.displayName %></div>
              <div class="client-email"><%= client.email %></div>
              <div class="client-date">Registered: <%= new Date(client.registeredDate).toLocaleDateString() %></div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
    
    <div style="text-align: center; margin-top: 30px;">
      <a href="/api/auth/logout" class="btn btn-secondary">Sign Out</a>
    </div>
  </div>
</body>
</html>
