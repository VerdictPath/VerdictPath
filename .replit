run = "npm run dev"
modules = ["nodejs-20", "python-3.11", "postgresql-16"]
hidden = [".config", "package-lock.json"]
entrypoint = "index.html"

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "cd backend && npm install"]
publicDir = "dist"
run = ["node", "backend/server.js"]

[[ports]]
localPort = 3000
externalPort = 4200

[[ports]]
localPort = 3001
externalPort = 8008

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Verdict Path Web"

[[workflows.workflow]]
name = "Verdict Path Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=5000 EXPO_NO_CACHE=1 node server.js"
waitForPort = 5000
